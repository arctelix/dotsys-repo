#!/bin/bash

debug_shell "  - arctelix vim aliases loaded $PLATFORM_S"

VISUAL='vim'

# make sure vim is linked to mvim or create alias
if [ "$PLATFORM_S" = mac ] && drealpath "$(which vim)" | grep mvim >/dev/null; then
    alias vim='mvim -v'
    alias vi='mvim -v'
    #Set as default editor
    VISUAL='mvim -v'
fi

export VISUAL

